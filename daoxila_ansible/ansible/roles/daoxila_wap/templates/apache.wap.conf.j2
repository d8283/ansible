<VirtualHost *:80>
    DocumentRoot "/www/daoxila/daoxila_wap/public"
    ServerAdmin server@daoxila.com
    ServerName m.daoxila.com

    CustomLog /var/log/httpd/wap-access.log combined
    ErrorLog /var/log/httpd/wap-error.log

    SetEnv ENV_PATH /etc/daoxila/Env.php

    Header add ServerID "wap-{{ inventory_hostname|ipaddr('int') % 256 }}"

    SetEnv ENV_PATH /etc/daoxila/Env.php
    
</VirtualHost>

<Directory "/www/daoxila/daoxila_wap/public">
    Options -Indexes FollowSymLinks
    DirectoryIndex index.html index.htm default.htm index.php
    AllowOverride All
    Order Deny,Allow
    Allow from all
</Directory>

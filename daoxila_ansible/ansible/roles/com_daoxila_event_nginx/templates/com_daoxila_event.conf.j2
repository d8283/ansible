server {
  listen 80;
  server_name event.daoxila.com;

  location / {
    root /www/daoxila/daoxila_event;
    index index.html index.htm;
  }

  error_log /var/log/nginx/daoxila_event-error.log;
  access_log /var/log/nginx/daoxila_event-access.log;
}

server {
  listen 443 ssl;
  server_name events.daoxila.com;

  ssl                       on;
  ssl_certificate           /etc/nginx/daoxila/daoxila_com.cer;
  ssl_certificate_key       /etc/nginx/daoxila/daoxila_com.key;
  ssl_protocols             SSLv2 SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers               HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  root /www/daoxila/daoxila_event;

  location / {
    root /www/daoxila/daoxila_event;
    index index.html index.htm;
  }

  error_log /var/log/nginx/daoxila_event-error.log debug;
  access_log /var/log/nginx/daoxila_event-access.log;
}
